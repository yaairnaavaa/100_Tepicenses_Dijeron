<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.edu.ittepic.a100_tepicenses_dijeron">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppThemeLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Principal"
            android:theme="@style/AppThemePrincipal" />
        <activity
            android:name=".Creditos"
            android:theme="@style/AppThemeDialog" />
        <activity
            android:name=".Ranking"
            android:theme="@style/AppThemeRanking" />
        <activity android:name=".Registro"
            android:theme="@style/AppThemePrincipal"
            />
        <activity android:name=".LienzoJuegoActivity"
            android:theme="@style/AppThemePrincipal"
            android:screenOrientation="reversePortrait"/>
    </application>

</manifest>